<project xmlns="http://maven.apache.org/POM/4.0.0" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 
                             http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.example</groupId>
  <artifactId>actimize-client</artifactId>
  <version>1.0.0</version>
  <name>actimize-client</name>

  <properties>
    <java.version>17</java.version>
    <spring.boot.version>3.3.3</spring.boot.version>
    <jaxws.rt.version>4.0.2</jaxws.rt.version> <!-- Jakarta/JAX-WS RI -->
  </properties>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-dependencies</artifactId>
        <version>${spring.boot.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <dependencies>
    <!-- Spring Web (for REST controller) -->
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-web</artifactId>
    </dependency>

    <!-- JAX-WS runtime (Jakarta) -->
    <dependency>
      <groupId>com.sun.xml.ws</groupId>
      <artifactId>jaxws-rt</artifactId>
      <version>${jaxws.rt.version}</version>
    </dependency>

    <!-- JAXB API/Runtime (Jakarta) -->
    <dependency>
      <groupId>org.glassfish.jaxb</groupId>
      <artifactId>jaxb-runtime</artifactId>
      <version>4.0.5</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <!-- Generate JAX-WS client from your WSDL -->
      <plugin>
        <groupId>com.sun.xml.ws</groupId>
        <artifactId>jaxws-maven-plugin</artifactId>
        <version>3.0.2</version>
        <executions>
          <execution>
            <goals>
              <goal>wsimport</goal>
            </goals>
            <configuration>
              <!-- Where your WSDL is placed in the project -->
              <wsdlFiles>
                <wsdlFile>${project.basedir}/src/main/resources/wsdl/EventHandlerService.wsdl</wsdlFile>
              </wsdlFiles>

              <!-- Package for generated classes -->
              <packageName>com.actimize.eh.ws</packageName>

              <!-- Keep RPC-literal compatible, no wrapper classes -->
              <xnocompile>true</xnocompile>
              <extension>true</extension>
              <verbose>true</verbose>

              <!-- If you want to inspect generated sources -->
              <sourceDestDir>${project.build.directory}/generated-sources/wsimport</sourceDestDir>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.11.0</version>
        <configuration>
          <source>${java.version}</source>
          <target>${java.version}</target>
          <annotationProcessorPaths/>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
